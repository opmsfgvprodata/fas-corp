
@using MVC_SYSTEM.Class
@using MVC_SYSTEM.Models
@model IEnumerable<MVC_SYSTEM.ModelsSP.sp_MaybankRcmsOnlinePaymentRpt_Result>


@{
    int? month = ViewBag.MonthList;
    int? year = ViewBag.YearList;
    int bil = 0;
    decimal? totalNetPay = 0;
    decimal? totalWorkers = 0;
    string accNo = "-";

    string uniquefilename = "SSC Online Payment Report (" + ViewBag.NamaPendekSyarikat + ") " + ViewBag.MonthList + ViewBag.YearList;
}

@if (Model != null && Model.Count() != 0)
{
    <div id="scrollArea" class="modal-body">

        <p style="font-size: 11px" align="right">@ViewBag.Date | @ViewBag.Time</p>

        <table id="page" class="table" style="font-size: 11px; margin-bottom: 0px" border="0">
            <thead>
                <tr>
                    <th colspan="6" style="text-align: center; vertical-align: middle; border: none;">
                        @ViewBag.NamaSyarikat
                        <br />
                        (@*@GlobalResCorp.lblCompanyNo :*@@ViewBag.NoSyarikat)
                        <br />
                        SSC Online Payment Report @ViewBag.MonthList/@ViewBag.YearList
                        <br />
                        <br />
                        <br />
                    </th>
                </tr>
            </thead>
            <tbody>

                @if (ViewBag.AccNo == null)
                {
                    accNo = accNo;
                }
                else
                {
                    accNo = ViewBag.AccNo;
                }

                <tr>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;">Company Name</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;">: @ViewBag.NamaSyarikat
                    <td width="4%" style="vertical-align: middle !important; border:none;"></td>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;">Company Account No</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;">: @accNo</td>
                </tr>
                <tr>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;">Payment Reference</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;">: WORKERS SALARY</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;"></td>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;">Payment Desc</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;">: @ViewBag.MonthList/@ViewBag.YearList</td>
                </tr>
                <tr>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;">&nbsp;</td>
                    <td width="4%" style="vertical-align: middle !important; border:none;"></td>
                    <td width="4%" style="vertical-align: middle !important; border:none;"></td>
                    <td width="4%" style="font-weight: bold; vertical-align: middle !important; border:none;"></td>
                    <td width="4%" style="vertical-align: middle !important; border:none;"></td>
                </tr>
            </tbody>
        </table>
        <table id="page" class="table" style="font-size: 11px; margin-bottom: 0px" border="0">
            <thead>
                <tr>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">@GlobalResCorp.hdrNo</th>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">Estate Code</th>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">Business Area</th>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">Estate Name</th>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">Total Worker</th>
                    <th rowspan="1" style="margin: 2px !important; padding: 5px !important; text-align: center; vertical-align: middle !important; border: 1px solid red;" border="1">Amount (RM)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    bil = bil + 1;

                    totalNetPay += item.fld_JumlahGajiBersih;
                    totalWorkers += item.fld_JumlahPekerja;

                    <tr>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: center; border-right: none; border-left: none">@bil.</td>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: center; border-right: none; border-left: none">@item.fld_LdgCode</td>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: left; border-right: none; border-left: none">@item.fld_LdgBusinessArea</td>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: left; border-right: none; border-left: none">@item.fld_LdgName</td>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: center; border-right: none; border-left: none">@item.fld_JumlahPekerja</td>
                        <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border: 1px dotted gray; text-align: right; border-right: none; border-left: none">@item.fld_JumlahGajiBersih</td>
                    </tr>

                }

                <tr>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; text-align: right; border-right: none; border-left: none"></td>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; text-align: right; border-right: none; border-left: none"></td>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; text-align: right; border-right: none; border-left: none"></td>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; text-align: right; border-right: none; border-left: none; font-weight:bold">Total:</td>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; border-bottom: none; text-align: center; border-right: none; border-left: none; font-weight:bold">@totalWorkers</td>
                    <td align="center" style="margin: 2px !important; padding: 4px !important; vertical-align: middle !important; border-top: 1px solid gray; border-bottom: none; text-align: right; border-right: none; border-left: none; font-weight: bold"> @totalNetPay</td>
                </tr>

            </tbody>
        </table>

        @*<newpage />*@

    </div>

    if (ViewBag.Print == null)
    {
        <div style="text-align:right; margin-top:10px">
            <a class="btn btn-default btn-sm" href="#" id="printpage">
                <span class="glyphicon glyphicon-print"> </span> @GlobalResCorp.btnPrint
            </a>
            <a class="btn btn-default btn-sm" href="#" id="downloadpdf">
                <span><img src="~/Asset/Images/pdf-icon.png" width="20px" height="20px" /></span> @GlobalResCorp.btnDownloadPdf
            </a>
            <a class="btn btn-default btn-sm" href="#" onclick="HTMLtoExcel('@uniquefilename')">
                <span><img src="~/Asset/Images/excel-icon.png" width="20px" height="20px" /></span> @GlobalResCorp.btnDownloadExcel
            </a>
        </div>
    }
}

@if (Model.Count() == 0)
{
    <div id="scrollArea2" class="modal-body" style="text-align: center">
        <p style="color: red">@ViewBag.Message</p>

    </div>
}
<script src="~/Asset/Scripts/FromHTML.js"></script>
<script src="~/Asset/Scripts/FileSaver.js"></script>
<style>
    #page td {
        padding: 2px;
        margin: 2px;
    }
</style>

<script>
    $(document).ready(function () {
        $("#printpage").click(function () {
            var DivElement = document.getElementById("scrollArea").innerHTML;
            var oldPage = document.body.innerHTML;
            document.body.innerHTML = DivElement;
            window.print();
            document.body.innerHTML = oldPage;
        });

        $("#downloadpdf").click(function () {
            var myHtml = document.getElementById('scrollArea').innerHTML;
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ConvertPDFRpt", "MaybankFileGen")',
                dataType: 'json',
                contentType: 'application/json',
                data: JSON.stringify({ myHtml: myHtml, filename: "@uniquefilename", reportname: "SSCOnlinePaymentReport" }),
                success: function (result) {
                    if (result.success) {
                        var win = window.open(result.link, '_blank');
                        win.focus();
                    } else {
                        $.simplyToast(result.msg, result.status);
                    }
                },
                error: function (error) {
                    $.simplyToast('Sorry to many data', 'danger');
                }
            });
            return false;
        });
    });
</script>